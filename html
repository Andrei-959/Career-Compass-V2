            // You can continue adding more careers here...
        };

        function searchJob() {
            let jobTitle = document.getElementById("jobInput").value.trim().toLowerCase();
            let resultsDiv = document.getElementById("results");

            if (careerData.hasOwnProperty(jobTitle)) {
                let jobInfo = careerData[jobTitle];
                resultsDiv.innerHTML = `
                    <h2>Results for ${jobTitle.charAt(0).toUpperCase() + jobTitle.slice(1)}</h2>
                    <p class="category">Best High School Classes:</p>
                    <ul>${jobInfo.highSchoolClasses.map(cls => `<li>${cls}</li>`).join("")}</ul>
                    
                    <p class="category">Internships:</p>
                    <ul>${jobInfo.internships.map(intern => `<li>${intern}</li>`).join("")}</ul>
                    
                    <p class="category">Scholarships:</p>
                    <ul>${jobInfo.scholarships.map(scholar => `<li>${scholar}</li>`).join("")}</ul>
                    
                    <p class="category">Financial Aid:</p>
                    <ul>${jobInfo.financialAid.map(aid => `<li>${aid}</li>`).join("")}</ul>
                `;
                resultsDiv.style.display = "block";
            } else {
                resultsDiv.innerHTML = "<p>No results found. Try another career.</p>";
                resultsDiv.style.display = "block";
            }
        }
    </script>

